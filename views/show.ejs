<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="city-details-container">
      <div class="banner-container">
        <div class="banner-photo">
          <img src="<%= locationDetails.desktop_img %>" />
        </div>
        <div class="banner-city-name-container">
          <div class="banner-city-name"><%= locationDetails.city %>, <%= locationDetails.country%></div>
        </div>
      </div>
      <form class="index-form" action="/index/<%=locationDetails._id %>?_method=DELETE" method="post">
        <input type="submit" value="Delete" id="delete-location" />
      </form>
    </div>
  </body>
</html>
